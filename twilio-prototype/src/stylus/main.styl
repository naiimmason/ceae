@import "modules/_fonts"
@import "modules/_colors"
@import "vendor/_border-radius"
@import "vendor/_linear-gradient"

@media (max-width 600px)
  img
    width 100%

.head-banner
  width 100%
  height 30px
  background-color darkAccent
  box-shadow 0px 2px 2px #888888

.container
  margin-top -20px

input.ng-valid.ng-touched
  border 2px solid #78FA89

input.ng-invalid.ng-touched
  border 2px solid #FA787E

.fa-times
  color darkRed
  &:hover
    cursor pointer

.user-field-input
  font-size 28px
