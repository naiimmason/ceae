@import "modules/_fonts"
@import "modules/_colors"
@import "partials/_reset"
@import "vendor/_border-radius"
@import "vendor/_linear-gradient"

body
  font-family: baseFontFamily
  
header
  h1
    display inline-block
    width 60%
    text-align right
  img
    display inline-block
    width 39%
    vertical-align top 
  
  margin-bottom 30px

section
  display block

h1
  font-size 40px
  font-weight bold

h4 
  font-size defaultSize + 5
  font-weight bold

p
  margin-top 20px
  margin-bottom 20px
  line-height 110%

ul
  list-style-type square
  list-style-position inside

li
  margin-top 10px
  margin-bottom 10px
  
a
  color linkColor
  text-decoration none
  &:visited
    color linkColor
  &:hover
    color hoverColor

strong
  font-weight bold

em
  font-style italic

hr
  border 0
  height 1px
  background #333;
  linear-gradient(left, #ccc, #333, #ccc)
  
button 
  border-radius(2px)
  background-color linkColor
  color white
  border 1px solid darkAccent
  font-size defaultSize
  padding 6px
  &:hover
    background-color hoverColor
    cursor pointer

.page-wrapper
  margin auto
  width 960px
  font-size defaultSize

.head-banner
  width 100%
  height 30px
  background-color darkAccent
  box-shadow: 0px 2px 2px #888888;
  margin-bottom 10px

.main-content
  display inline-block
  width 79%

.sidebar
  display inline-block
  width 20%
  vertical-align top

.user-list
  margin-top 20px
  
.add-user
  margin-top 20px
  
.send-message
  margin-top 20px

